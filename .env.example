# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Embedding Configuration
# Options: st_local (SentenceTransformers - local), titan (AWS Bedrock Titan)
# 
# Option 1: Use AWS Bedrock Titan (requires AWS credentials)
EMBED_PROVIDER=titan
EMBED_MODEL_NAME=amazon.titan-embed-text-v1
VECTOR_DIM=1536  # Titan v1 embeddings are 1536 dimensions
#
# Option 2: Use Sentence Transformers (local, no AWS required)
# EMBED_PROVIDER=st_local
# EMBED_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
# VECTOR_DIM=384  # all-MiniLM-L6-v2 embeddings are 384 dimensions

# Variant Provider
# Options: builtin, anthropic
VARIANT_PROVIDER=anthropic

# AWS Bedrock Configuration
AWS_REGION=us-east-1
# Optional: AWS credentials (if not provided, uses default credential chain)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# ANTHROPIC_MODEL=anthropic.claude-3-haiku-20240307-v1:0  # Model ID for on-demand
# ANTHROPIC_MODEL=arn:aws:bedrock:us-east-1::inference-profile/anthropic.claude-3-5-sonnet-20241022-v2:0  # Inference profile ARN
TITAN_EMBED_MODEL=amazon.titan-embed-text-v1

# API Configuration
HOST=0.0.0.0
PORT=8080

# Redis Vector Index Configuration
INDEX_NAME=sc:idx
KEY_PREFIX=sc:doc:
EF_CONSTRUCTION=200
M=16
